---
import documentos from "@images/documentos.svg";
---

<section class="py-12 px-6 lg:py-24 lg:px-14">
   <div class="lg:max-w-5xl xl:max-w-7xl relative mx-auto w-full">
      <div class="lg:flex items-center justify-center">
         <div class="block basis-0 flex-shrink flex-grow p-2 text-center">
            <h2
               class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-5"
            >
               Este <span class="text-cyan-ak">proyecto</span> cuenta con:
            </h2>
         </div>
      </div>

      <div class="lg:flex flex-wrap items-center justify-between">
         <div
            class="block basis-0 flex-shrink flex-grow p-2 text-center md:flex-none md:w-3/4 md:mx-auto lg:w-1/2 xl:w-2/6"
         >
            <article
               class="rounded md:shadow-xl shadow-azul border-cyan-ak transition duration-300"
            >
               <div
                  class="flex items-center justify-center p-3 lg:flex-col lg:p-6 gap-x-4 rounded"
               >
                  <figure class="text-center lg:mb-4">
                     <svg
                        width="74"
                        height="74"
                        viewBox="0 0 103 103"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                     >
