---
export interface Props {
   title: string;
}

const { title } = Astro.props;

import "@fontsource/koho";
import "@fontsource/koho/500.css";
import "@fontsource/koho/700.css";
---

<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/png" href="/detalle-proyecto/ayllu-kaypi.png" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
   </head>
   <body class="bg-[#010B15] bg-homepage-hero-after">
      <slot />
   </body>
</html>

<style>
   body {
      --sb-track-color: #232e33;
      --sb-thumb-color: #2ee5d8;
      --sb-size: 10px;

      scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
   }

   body::-webkit-scrollbar {
      width: var(--sb-size);
   }

   body::-webkit-scrollbar-track {
      background: var(--sb-track-color);
      border-radius: 10px;
   }

   body::-webkit-scrollbar-thumb {
      background: var(--sb-thumb-color);
      border-radius: 10px;
   }
</style>
